{
  "manifest_version": 3,
  "name": "AffectHelper",
  "description": "Accessibility enhancement for dyslexia, ADHD, color blindness, epilepsy, etc.",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/manager.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "affections/*/*.js",
        "affections/*/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
