{
  "manifest_version": 3,
  "name": "BrilliantMind",
  "description": "Accessibility enhancement for dyslexia, ADHD, color blindness, epilepsy, etc.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://api.openai.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/manager.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ai/*.js",
        "ai/*.css",
        "affections/base/*.js",
        "affections/base/*.css",
        "affections/adhd/*.js",
        "affections/adhd/*.css",
        "affections/color_blindness/*.js",
        "affections/color_blindness/*.css",
        "affections/dyslexia/*.js",
        "affections/dyslexia/*.css",
        "affections/epilepsy/*.js",
        "affections/epilepsy/*.css",
        "affections/simplify/*.js",
        "affections/simplify/*.css",
        "affections/reader_mode/*.js",
        "affections/reader_mode/*.css",
        "api/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
