{
  "manifest_version": 3,
  "name": "BrilliantMind",
  "description": "Accessibility enhancement for dyslexia, ADHD, color blindness, epilepsy, etc.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
},

"action": {
    "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
    },
    "default_title": "BrilliantMind",
    "default_popup": "popup/popup.html"
},


  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/manager.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ai/*.js",
        "ai/*.css",
        "affections/base/*.js",
        "affections/base/*.css",
        "affections/adhd/*.js",
        "affections/adhd/*.css",
        "affections/color_blindness/*.js",
        "affections/color_blindness/*.css",
        "affections/partially_blindness/*.js",
        "affections/partially_blindness/*.css",
        "affections/dyslexia/*.js",
        "affections/dyslexia/*.css",
        "affections/epilepsy/*.js",
        "affections/epilepsy/*.css",
        "affections/simplify/*.js",
        "affections/simplify/*.css",
        "affections/reader_mode/*.js",
        "affections/reader_mode/*.css",
        "affections/autism/*.js",
        "affections/autism/*.css",
        "affections/simplify/settings-popup.html",
        "affections/simplify/settings-popup.js",
        "api/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
